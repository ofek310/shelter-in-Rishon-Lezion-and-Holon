<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    tools:context=".SignInFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sign_in_mail"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        app:startIconTint="@color/orange"
        app:startIconDrawable="@drawable/ic_email_24"
        android:layout_marginEnd="20dp"
        android:hint="@string/email_title"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_id"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sign_in_password"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        app:startIconTint="@color/orange"
        app:startIconDrawable="@drawable/ic_lock_24"
        android:layout_marginEnd="20dp"
        android:hint="@string/password_title"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_id"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sign_in_name"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        app:startIconTint="@color/orange"
        app:startIconDrawable="@drawable/ic_emoji_people_24"
        android:layout_marginEnd="20dp"
        android:hint="@string/name_title"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_id"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        app:startIconTint="@color/orange"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spiner_text"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            app:startIconTint="@color/orange"
            android:layout_alignParentEnd="true"
            app:startIconDrawable="@drawable/ic_account_circle_24"
            android:layout_marginEnd="20dp"
            android:hint="@string/kind_user_title"
            android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="325dp"
            android:layout_alignBaseline="@id/spiner_text"
            android:layout_alignStart="@id/spiner_text"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <Button
        android:id = "@+id/sign_in_btn"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/orange"
        android:text="@string/sign_in_title"
        android:textAllCaps="false"/>

</LinearLayout>